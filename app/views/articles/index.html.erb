<h1 class="my-4">Recent Posts</h1>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <% if article.image_url.present? %>
          <img src="<%= article.image_url %>" class="card-img-top" alt="<%= article.title %>">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article), class: 'text-dark' %></h5>
          <p class="card-text"><%= truncate(article.body, length: 100) %></p>
          <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted"><%= article.created_at.strftime("%d/%m/%Y") %></small>
            <%= link_to 'Read more', article_path(article), class: 'btn btn-sm btn-outline-secondary' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
